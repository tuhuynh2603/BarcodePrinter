<UserControl x:Class="BarcodePrintLabel.Views.SequenceButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BarcodePrintLabel.Views"
             mc:Ignorable="d">
    <!-- Khu scan input -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" Grid.Column="0">
            <ToggleButton Content="Manual"
                IsChecked="{Binding IsManualMode, Mode=TwoWay}"
                Margin="10,0,0,0"/>
            <ToggleButton Content="Auto"
                IsChecked="{Binding IsAutoMode, Mode=TwoWay}"
                Margin="10,0,0,0"/>
            <ToggleButton Content="PLC Comm"
                IsChecked="{Binding IsOpenModbusDialog, Mode=TwoWay}"
                Margin="10,0,0,0"/>
            <ToggleButton Content="Printer Comm"
                IsChecked="{Binding IsOpenPrinterCommunicationDialog, Mode=TwoWay}"
                Margin="10,0,0,0"/>
            <ToggleButton Content="Scanner Comm"
                IsChecked="{Binding IsOpenScannerCommunicationDialog, Mode=TwoWay}"
                Margin="10,0,0,0"/>
        </StackPanel>

        <ToggleButton Content="Bypass"
                      HorizontalAlignment="Right"
                      IsChecked="{Binding IsBypass, Mode=TwoWay}"
                      Width="100" Grid.Column="1"/>
    </Grid>
</UserControl>
