<Window x:Class="BarcodePrintLabel.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcodePrintLabel"
        xmlns:vm="clr-namespace:BarcodePrintLabel.ViewModels"
        xmlns:views="clr-namespace:BarcodePrintLabel.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:SequenceButtons DataContext="{Binding SequenceButtonsVM}" Grid.Row="0"/>

        <!-- UserControl DataGrid -->
        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

            <Grid  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <views:ModbusCommunicationView DataContext="{Binding modbusCommunicationVM}" Grid.Row="0"/>
                <views:SerialCommunicationView DataContext="{Binding printerSerialCommunicationViewModel}" Grid.Row="1"/>
                <views:SerialCommunicationView DataContext="{Binding scanSerialCommunicationViewModel}" Grid.Row="2"/>

            </Grid>
            <views:ResultDataGridView DataContext="{Binding PrintResultVM}" Grid.Column="1"/>
        </Grid>         
    </Grid>
</Window>
